<div class="paper-cell row">
    <div class="paper-cell-left col-xs-1">
        <div class="paper-cell-macroscore">{{ paper.macroscore }}</div>
    </div>
    <div class="paper-cell-middle col-xs-10">
        <div class="paper-cell-title">
            <a href="{{ request.route_url('view_paper', arxiv_id=paper.arxiv_id) }}">{{ paper.title }}</a> ({{ paper.formatted_date }})
        </div>
        <div class="paper-cell-authors">
                {% for author in paper.authors %}
                <span>{{ author.name }}</span>{% if loop.last %}.{% else %}, {% endif %}
                {% endfor %}
        </div>
        <div class="paper-cell-userdata">
            <span class="paper-cell-userscore">
                    {% for index in range(1, 11) %}
                        {% if paper.userscore %}
                            {% if index == paper.userscore %}
                                <span><strong><a href="{{ request.route_url('delete_paper_rating', arxiv_id=paper.arxiv_id) }}">{{ index }}</a></strong></span>
                            {% else %}
                                <span><a href="{{ request.route_url('edit_paper_rating', arxiv_id=paper.arxiv_id, rating=index) }}">{{ index }}</a></span>
                            {% endif %}
                        {% else %}
                            <span><a href="{{ request.route_url('add_paper_rating', arxiv_id=paper.arxiv_id, rating=index) }}">{{ index }}</a></span>
                        {% endif %}
                    {% endfor %}
            </span>
            {% for tag in paper.tags %}
                {% if loop.first %}
                    <span style="margin-left: 5px; margin-right: 5px;">|</span>
                    <span class="paper-cell-tags">
                {% endif %}
                        <span>
                        <a href="{{request.route_url('view_user_taglist', user_name=request.user.name, tag_name=tag.name)}}">{{ tag.name }}</a>
                        <a href="{{request.route_url('delete_tag', arxiv_id=paper.arxiv_id, tag_name=tag.name)}}" class="tag-close close" aria-label="Close"><span>&times;</span></a>
                        </span> 
                {% if loop.last %}
                    </span>
                {% endif %}
            {% endfor %}
            </span>
        </div>
    </div>
    <div class="paper-cell-right col-xs-1">
        <div class="paper-cell-similar">
            <a href="{{ request.route_url('view_similar_papers', arxiv_id=paper.arxiv_id) }}">Similar</a>
        </div>
        <div>
            <span class="paper-cell-summaryscore">{{ paper.summaryscore }}</span>
            <span class="paper-cell-tipscore">{{ paper.tipscore }}</span>
        </div>
    </div>
</div>
