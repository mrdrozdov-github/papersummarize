{% extends 'layout.jinja2' %}

{% block subtitle %}Summarize - {% endblock subtitle %}

{% block content %}
<p>
Submit summary for <strong><a href="{{request.route_url('view_paper', arxiv_id=paper.arxiv_id)}}">{{paper.arxiv_id}}</a></strong>
</p>
<form>
<div class="form-group">
    <textarea class="form-control" name="body" rows="10" cols="60" disabled>{{ summary.data }}</textarea>
</div>
</form>
{% endblock content %}
