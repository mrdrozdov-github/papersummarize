{% extends 'layout.jinja2' %}

{% block content %}

<div style="margin-bottom: 10px;">
{% include 'custom_cells/paper_cell.jinja2' %}
</div>

<div class="row" style="text-align: center; margin-bottom: 10px;">
    <div class="col-xs-12">
        <span>Tips</span>
        <span>-</span>
        <span><a href="{{ request.route_url('add_tip', arxiv_id=paper.arxiv_id, _query={'next': request.url}) }}">add</a></span>
    </div>
</div>

<div class="row" style="margin-bottom: 10px;">
    <div class="col-xs-12">
        {% for tip in tips %}
        {% include('./custom_cells/tip_cell.jinja2') %}
        {% endfor %}
    </div>
</div>

{% endblock %}
